version: '2'
services:
  dump1090:
    image: "raspbian-dump1090"
    container_name: dump1090
    build: ./dump1090
    restart: always
    devices:
     - "/dev/bus/usb:/dev/bus/usb"
    ports:
     - "8080:8080"
     - "30003:30003"
     - "30005:30005"
     - "30104:30104"
    environment:
      - DUMP_HTTP_PORT=8080
      - DUMP_SBS_PORT=30003
      - DUMP_LAT=49.555
      - DUMP_LON=-124.555
  piaware:
    image: "raspbian-flightaware"
    container_name: piaware
    build: ./flightaware
    restart: always
    environment:
      - PIAWARE_HOST=dump1090
      - PIAWARE_PORT=30005
      - PIAWARE_USER=username
      - PIAWARE_PASSWORD=password
      - PIAWARE_FEEDER_ID=
  flightradar:
    image: "raspbian-flightradar24"
    container_name: flightradar24
    build: ./flightradar
    restart: always
    ports:
     - "8754:8754"
    environment:
      - DUMP1090_HOST=dump1090
      - DUMP1090_PORT=30005
      - FR24_KEY=
    restart: always
  planefinder:
    image: "raspbian-planefinder"
    container_name: planefinder
    build: ./planefinder
    restart: always
    ports:
     - "30053:30053"
    environment:
      - DUMP1090_HOST=dump1090
      - DUMP1090_PORT=30005
      - PF_SHARECODE=
      - LAT=
      - LONG=
    restart: always